<Page
    x:Class="Drinks_Vending_Machine.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Drinks_Vending_Machine"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="FloralWhite">
        <TextBlock Text="Vending Machine"
                   FontSize="50"
                   HorizontalAlignment="Center"/>
        <TextBlock x:ConnectionId='2' x:Name="showChoice"
                   FontStyle="Italic"
                   FontSize="30"
                   Margin="0,160,0,0"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"/>
        <Button x:ConnectionId='3' x:Name="drinkCup"
                                     
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
            <Image Source="Images/1.png"
               Height="200"
               Width="150">
            </Image>
        </Button>
        <StackPanel x:ConnectionId='4' 
                    x:Name="coffeeList"
                    Background="Tomato"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:ConnectionId='13' x:Name="choice1"
                                          >
                <Image Source="CoffeePic/1.png"
                       Width="150"
                       Height="200">
                </Image>
            </Button>
            <Button x:ConnectionId='14' x:Name="choice2"
                                               >
                <Image Source="CoffeePic/2.png"
                       Width="150"
                       Height="200">
                </Image>
            </Button>
            <Button x:ConnectionId='15' x:Name="choice3"
                                                >
                <Image Source="CoffeePic/3.png"
                       Width="150"
                       Height="200">
                </Image>
            </Button>
        </StackPanel>
        <Button x:ConnectionId='5' Content="ACCEPT"
                    Width="200"
                    Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,400,0,0"
                    Background="Red"
                                       />
        <ToggleButton x:ConnectionId='6' Content="Big Cups"
                      IsEnabled="True"
                      Width="250"
                      Height="50"
                      Margin="260,280,0,0"
                      Background="ForestGreen"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                                            />
        <ToggleButton x:ConnectionId='7' Content="Little Cups"
                      Width="255"
                      Height="50"
                      Margin="0,280,255,0"
                      Background="ForestGreen"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                                               />
        <Button x:ConnectionId='8' x:Name="CoinSlot" 
                Height="150" Width="50" 
                Margin="580,100,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                                      >
            <Image Source="SlotPic/CoinSlot.png"
                   Height="150"
                   Width="50"
                   Margin="-10,-6,-10,-7">
            </Image>
        </Button>
        <Button x:ConnectionId='9' x:Name="TenShekels" 
                Margin="580,300,0,0" 
                Height="30"
                Width="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                                         >
            <Image Source="CoinPics/10shekels.png"
                   Height="30"
                   Width="30" Margin="-10,-6,-10,-7">
            </Image>
        </Button>
        <Button x:ConnectionId='10' x:Name="FiveShekels" 
                Margin="580,335,0,0" 
                Height="30"
                Width="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                                          >
            <Image Source="CoinPics/5shekels.png"
                   Height="30"
                   Width="30" Margin="-10,-6,-10,-7">
            </Image>
        </Button>
        <Button x:ConnectionId='11' x:Name="OneShekel" 
                Margin="580,370,0,0" 
                Height="30"
                Width="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                                        >
            <Image Source="CoinPics/1shekel.png"
                   Height="30"
                   Width="30" Margin="-10,-6,-10,-7">
            </Image>
        </Button>
        <Button x:ConnectionId='12' x:Name="FiftyAgorot" 
                Margin="580,405,0,0" 
                Height="30"
                Width="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                                          >
            <Image Source="CoinPics/50agorot.png"
                   Height="30"
                   Width="30" Margin="-10,-6,-10,-7">
            </Image>
        </Button>
    </Grid>
</Page>

